<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>AccLoginPage.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>BillPayServlet</servlet-name>
        <servlet-class>Controller.BillPayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HouseHoldsServlet</servlet-name>
        <servlet-class>Controller.HouseHoldsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>Controller.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BillPayDisplay</servlet-name>
        <servlet-class>Controller.BillPayDisplay</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HouseHoldsDisplay</servlet-name>
        <servlet-class>Controller.HouseHoldsDisplay</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>Controller.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>Controller.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillPayServlet</servlet-name>
        <url-pattern>/BillPayServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HouseHoldsServlet</servlet-name>
        <url-pattern>/HouseHoldsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BillPayDisplay</servlet-name>
        <url-pattern>/BillPayDisplay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HouseHoldsDisplay</servlet-name>
        <url-pattern>/HouseHoldsDisplay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
